<div
        className="fade-div flex flex-col inset-x-0 justify-between items-center text-center mb-20 relative top-52 gap-10 w-[80%]"
        id="testmonials"
      >
        <h1 className="text-2xl sm:text-3xl md:text-5xl w-full sm:w-4/5 md:w-[60%] font-bold mt-10 sm:mt-16 md:mt-20">
          Worldwide Trust Built on Excellence
        </h1>

       <div className="flex flex-col md:flex-row justify-between items-center testmonial-card gap-6 md:gap-10">
  {/* Image */}
  <img
    key={`img-${testimonialIndex}`}
    src={testimonials[testimonialIndex].img}
    className="rounded-3xl testimonial-fade-in w-full sm:w-3/4 md:w-1/2 lg:w-2/5 max-w-[400px] object-cover"
    alt={testimonials[testimonialIndex].name}
  />

  {/* Text & Info */}
  <div className="flex flex-col justify-center items-center gap-6 md:gap-24 w-full md:w-auto">
    {/* Testimonial Text */}
    <p
      key={`text-${testimonialIndex}`}
      className="text-base sm:text-lg md:text-2xl text-left font-bold w-full md:w-[70%] testimonial-fade-in"
    >
      {testimonials[testimonialIndex].text}
    </p>

    {/* Name, Title & Arrows */}
    <div className="flex flex-col md:flex-row justify-between items-start md:items-center w-full md:w-[70%] gap-4 md:gap-0">
      <div
        key={`info-${testimonialIndex}`}
        className="flex flex-col justify-start items-start testimonial-fade-in"
      >
        <h1 className="font-bold text-lg sm:text-xl md:text-[25px]">
          {testimonials[testimonialIndex].name}
        </h1>
        <p className="font-normal text-sm sm:text-base md:text-lg">
          {testimonials[testimonialIndex].title}
        </p>
      </div>

      {/* Arrows */}
      <div className="flex flex-row gap-4 md:gap-6 mt-2 md:mt-0">
        <div className="arrows rounded-full left-arrow">
          <IoArrowBackOutline
            size={30} // smaller on mobile
            className="cursor-pointer border rounded-full"
            onClick={handlePrevTestimonial}
          />
        </div>
        <div className="arrows rounded-full right-arrow">
          <IoArrowForwardSharp
            size={30} // smaller on mobile
            className="cursor-pointer border rounded-full"
            onClick={handleNextTestimonial}
          />
        </div>
      </div>
    </div>
  </div>
</div>
      </div>